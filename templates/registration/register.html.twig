{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container vh-100">
		<div class="bloc-register d-flex flex-column">
			<h1 class="h1 text-center my-5">Registration</h1>
			<div class="card p-5">
				{{ form_start(registrationForm) }}
				<div class="mb-4">
					{{ form_row(registrationForm.email) }}
				</div>
				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

			</div>
			<div class="bloc-btn mt-4 d-flex justify-content-between">
                <a href="#" class="btn btn-lg btn-outline-dark">Return</a>
				<button type="submit" class="btn btn-lg btn-warning">Register</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
