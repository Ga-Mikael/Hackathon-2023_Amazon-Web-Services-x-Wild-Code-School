{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container vh-100">
		<div class="bloc-register">
			<div class="row">
				<div class="col col-sm-8 m-auto">
					<h1 class="h1 text-center my-5">Registration</h1>
					<div class="card p-5">
						{{ form_start(registrationForm) }}
						<div class="mb-5">
							{{ form_row(registrationForm.email) }}
						</div>
                        <div class="mb-5">
							{{ form_row(registrationForm.company) }}
						</div>
						<div class="mt-5">
							{{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
						</div>
					</div>
					<div class="bloc-btn mt-4 d-flex justify-content-between">
						<a href="#" class="btn btn-lg btn-outline-dark">Return</a>
						<button type="submit" class="btn btn-lg btn-warning">Register</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
