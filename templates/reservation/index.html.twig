{% extends "layoutUser.html.twig" %}

{% block title %}
	{{parent()}}| Reservation
{% endblock %}

{% block content %}
	<div class="container">
		<div class="bloc-reservation">
			<div class="row">
				<div class="col-xs-10 col-md-9 m-auto">
					<h1 class="h1 text-center my-5">Reservation</h1>
					<div class="card p-5">
						<div class="bloc-title d-flex justify-content-evenly">
							<div class="car">
								<svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" fill="dark" class="bi bi-car-front-fill" viewbox="0 0 16 16">
									<path d="M2.52 3.515A2.5 2.5 0 0 1 4.82 2h6.362c1 0 1.904.596 2.298 1.515l.792 1.848c.075.175.21.319.38.404.5.25.855.715.965 1.262l.335 1.679c.033.161.049.325.049.49v.413c0 .814-.39 1.543-1 1.997V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.338c-1.292.048-2.745.088-4 .088s-2.708-.04-4-.088V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.892c-.61-.454-1-1.183-1-1.997v-.413a2.5 2.5 0 0 1 .049-.49l.335-1.68c.11-.546.465-1.012.964-1.261a.807.807 0 0 0 .381-.404l.792-1.848ZM3 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM6 8a1 1 0 0 0 0 2h4a1 1 0 1 0 0-2H6ZM2.906 5.189a.51.51 0 0 0 .497.731c.91-.073 3.35-.17 4.597-.17 1.247 0 3.688.097 4.597.17a.51.51 0 0 0 .497-.731l-.956-1.913A.5.5 0 0 0 11.691 3H4.309a.5.5 0 0 0-.447.276L2.906 5.19Z"/>
								</svg>
							</div>
							<div class="stats d-flex flex-column justify-content-between">
								<div class="title text-dark d-flex align-items-center">
									<h1 class="mx-5 fw-bold">{{vehicle.brand}}
										{{vehicle.model}}</h1>
									<h2 class="mb-0">{{vehicle.type}}</h2>
								</div>
								<div class="items text-dark d-flex justify-content-around">
									<div class="diesel">
										svg
										<p class="fw-bold">{{vehicle.energy}}</p>
									</div>
									<div class="gear">
										svg
										<p class="fw-bold">{{vehicle.gearbox}}</p>
									</div>
									<div class="seat">
										svg
										<p class="fw-bold">{{vehicle.nbSeat}}</p>
									</div>
								</div>
							</div>
						</div>
						<div class="bloc-date text-dark my-5 d-flex flex-column align-items-center">
							<div class="date-start d-flex">
								<p class="fw-bold mx-5">Start Date</p>
								<p class="mx-5">Datetime</p>
							</div>
							<div class="date-end d-flex">
								<p class="fw-bold mx-5">End Date</p>
								<p class="mx-5">Datetime</p>
							</div>
						</div>
						<div class="col-10 col-sm-5 m-auto">
							<div class="bloc-btn d-flex flex-column justify-content-center align-items-center">
								<button class="btn btn-lg btn-secondary mb-3 w-100">Accept</button>
								<a href="/" class="btn btn-lg btn-outline-dark w-100">Return</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
