			<div class="p-2 bloc-funnel">
				<div class="d-flex justify-content-center gap-1 my-3">
					<a href="{{ path('app_company_fleet', {'company': company.id}) }}" class="btn bg-secondary">Show All</a>
					<a href={{ path('app_company_fleet_available', {'company': company.id} ) }} class="btn bg-secondary">Show available vehicles</a>
					<a href={{ path('app_company_fleet_unavailable', {'company': company.id} ) }} class="btn bg-secondary">Show unavailable vehicles</a>
					<a href={{ path('app_company_fleet_sharable', {'company': company.id} ) }} class="btn bg-secondary">Show shared vehicles</a>
					<a href={{ path('app_company_fleet_notsharable', {'company': company.id} ) }} class="btn bg-secondary active">Show private vehicles</a>
