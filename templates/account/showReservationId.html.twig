{% block title %}My account | Reservation
{% endblock %}

{% block content %}
	<div class="container">
		<div class="mt-5">
			<a href="{{ path('app_account') }}" class="btn btn-lg bg-secondary mx-2">
				<div class="d-flex align-items-center">
